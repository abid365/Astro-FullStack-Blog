---
// lib imports
import { Icon } from "astro-icon";
import Link from "./Link.astro";

// data imports
import navData from "../data/navData";
---

<nav aria-label="Primary">
  <div class="navbar">
    <a href="/" aria-label="Go Home">
      <Icon name="ic:baseline-android" width="60" />
    </a>
    <ul>
      {
        navData.map((item) => (
          <Link
            text={item.name}
            href={item.path}
            style="primary"
            isFilled={true}
            borderVisible={true}
            data-navLink
            icon={{
              name: "ic:baseline-android",
              side: "left",
            }}
          />
        ))
      }
    </ul>
  </div>
</nav>

<script>
  import "../js/nav.js";
</script>
